print("Starting xawremote... ")
serverUrl = "http://localhost:8888/cc/"

isdebug = false

oldprint = print

function debugprint(str)
	if isdebug do
		oldprint(str)
	end
end

function sendRequest(retValue)
        local label = os.getComputerLabel()
		retValue = retValue or "null"
		local request = serverUrl..label.."?param="..retValue
		debugprint("-- send request:")
		debugprint(request)
		http.request(request)
end
function encode (s)
  s = string.gsub(s, "([?&=+%c])", function (c)
		return string.format("%%%02X", string.byte(c))
	  end)
  s = string.gsub(s, " ", "+")
  return s
end
function wait()
        debugprint("nothing to do here .. ")
        os.sleep(1)
end
 
function waitForAnswer()
        while true do
                local event, host, params = os.pullEvent()
                if event == "http_failure" then
                        wait()
                        sendRequest("waiting")
                else
                   if event == "http_success" then
						param = params.readAll()
						output = "success"
                        if param == "wait" then
                                wait()
                        else
							-- print ("host: "..host.." params: "..param)
							f = assert(loadstring(param, output))
							
							local status = {pcall(f)}
							if status[1] then 
								debugprint("successfully called f")
							else
								debugprint("'"..status[2].."'")
								-- print(status[3])
								output = "error:"..encode(status[2])
							end
							debugprint(output)
                        end
                        sendRequest(output)
                  end
                end
        end
end
 
sendRequest("first")
waitForAnswer()