<Window x:Class="XawRemoteServer.TurtleControlWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TurtleControlWindow" Height="300" Width="300">
    <Grid>
        <UniformGrid>
            <Button Content="up"    Height="40" Width="40" HorizontalAlignment="Center" VerticalAlignment="Center" Click="TurtleCommand_Click"  Name="buttonUp" />
            <Button Content="^"     Height="40" Width="40" HorizontalAlignment="Center" VerticalAlignment="Center" Click="TurtleCommand_Click" Name="buttonForward" />
            <Button Content="down"  Height="40" Width="40" HorizontalAlignment="Center" VerticalAlignment="Center" Click="TurtleCommand_Click" Name="buttonDown" />
            <Button Content="left"  Height="40" Width="40" HorizontalAlignment="Center" VerticalAlignment="Center" Click="TurtleCommand_Click" Name="buttonLeft" />
            <Button Content="v"     Height="40" Width="40" HorizontalAlignment="Center" VerticalAlignment="Center" Click="TurtleCommand_Click" Name="buttonBackward" />
            <Button Content="right" Height="40" Width="40" HorizontalAlignment="Center" VerticalAlignment="Center" Click="TurtleCommand_Click" Name="buttonRight" />
        </UniformGrid>
    </Grid>
</Window>
